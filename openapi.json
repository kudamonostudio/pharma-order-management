{
  "openapi": "3.1.0",
  "info": {
    "title": "Pharma Order Management API",
    "version": "1.0.0",
    "description": "API para gestionar tiendas, sucursales, usuarios y órdenes en el sistema de farmacia."
  },
  "servers": [
    {
      "url": "http://localhost:3010",
      "description": "Local dev server"
    }
  ],
  "paths": {
    "/api/locations": {
      "get": {
        "summary": "Listar sucursales",
        "tags": [
          "Locations"
        ],
        "responses": {
          "200": {
            "description": "Lista de sucursales",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Location"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear sucursal",
        "tags": [
          "Locations"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LocationCreateInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucursal creada"
          }
        }
      }
    },
    "/api/stores": {
      "get": {
        "summary": "Listar tiendas",
        "tags": [
          "Stores"
        ],
        "responses": {
          "200": {
            "description": "Lista de tiendas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Store"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear tienda",
        "tags": [
          "Stores"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StoreCreateInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tienda creada"
          }
        }
      }
    },
    "/api/stores/{id}": {
      "get": {
        "summary": "Obtener tienda por ID",
        "tags": [
          "Stores"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tienda encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Store"
                }
              }
            }
          },
          "404": {
            "description": "No encontrada"
          }
        }
      },
      "put": {
        "summary": "Actualizar tienda",
        "tags": [
          "Stores"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StoreUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tienda actualizada"
          }
        }
      },
      "delete": {
        "summary": "Eliminar tienda (soft delete)",
        "tags": [
          "Stores"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tienda eliminada"
          }
        }
      }
    },

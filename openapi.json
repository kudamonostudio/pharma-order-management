            }
          }
        ],
        "responses": {
          "200": {
            "description": "Orden eliminada"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Store": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Location": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "phone": {
            "type": "string",
            "nullable": true
          },
          "storeId": {
            "type": "integer"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "deletedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          },
          "storeId": {
            "type": "integer",
            "nullable": true
          },
          "locationId": {
            "type": "integer",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "deletedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "required": [
          "id",
          "name",
          "email",
          "role"
        ]
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "orderCode": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string"
          },
          "total": {
            "type": "number",
            "format": "decimal"
          },
          "locationId": {
            "type": "integer"
          },
          "userId": {
            "type": "integer"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "deletedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "Role": {
        "type": "string",
        "enum": [
          "ADMIN_SUPREMO",
          "TIENDA_ADMIN",
          "COLABORADOR"
        ],
        "example": "COLABORADOR",
        "description": "Roles disponibles para los usuarios"
      },
      "OrderStatus": {
        "type": "string",
        "enum": [
          "PENDING",
          "COMPLETE",
          "CANCELLED"
        ],
        "example": "PENDING",
        "description": "Estados disponibles para las órdenes"
      },
      "LocationCreateInput": {
        "type": "object",
        "required": [
          "name",
          "address",
          "storeId"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "storeId": {
            "type": "integer",
            "example": 1
          },
          "phone": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "StoreUpdateInput": {
        "type": "object",
        "required": [
          "name",
          "address"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "string"
          },
          "address": {
            "type": "string",
            "example": "Calle ABC 123"
          }
        }
      },
      "StoreCreateInput": {
        "type": "object",
        "required": [
          "name",
          "address"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "string"
          },
          "address": {
            "type": "string",
            "example": "Calle ABC 123"
          }
        }
      },
      "UserCreateInput": {
        "type": "object",
        "required": [
          "name",
          "email",
          "role",
          "storeId",
          "locationId",
          "locationId"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN_SUPREMO",
              "TIENDA_ADMIN",
              "COLABORADOR"
            ]
          },
          "storeId": {
            "type": "integer",
            "example": 1,
            "nullable": true
          },
          "locationId": {
            "type": "integer",
            "example": 1,
            "nullable": true
          }
        }
      },
      "UserUpdateInput": {
        "type": "object",
        "required": [
          "name",
          "email",
          "role",
          "storeId",
          "locationId",
          "locationId"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN_SUPREMO",
              "TIENDA_ADMIN",
              "COLABORADOR"
            ]
          },
          "storeId": {
            "type": "integer",
            "nullable": true,
            "example": 1
          },
          "locationId": {
            "type": "integer",
            "nullable": true,
            "example": 1
          }
        }
      },
      "OrderCreateInput": {
        "type": "object",
        "required": [
          "orderCode",
          "date",
          "status",
          "total",
          "locationId",
          "userId"
        ],
        "properties": {
          "orderCode": {
            "type": "string",
            "example": "ORD-20250913-001"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "example": "2025-09-13T17:45:52.511Z"
          },
          "status": {
            "type": "string",
            "example": "PENDING"
          },
          "total": {
            "type": "number",
            "format": "decimal",
            "example": 150.75
          },
          "locationId": {
            "type": "integer",
            "example": 1
          },
          "userId": {
            "type": "integer",
            "example": 3
          }
        }
      },
      "OrderUpdateInput": {
        "type": "object",
        "required": [
          "orderCode",
          "date",
          "status",
          "total",
          "locationId",
          "userId"
        ],
        "properties": {
          "orderCode": {
            "type": "string",
            "example": "ORD-20250913-001"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "example": "2025-09-13T17:45:52.511Z"
          },
          "status": {
            "type": "string",
            "example": "PENDING"
          },
          "total": {
            "type": "number",
            "format": "decimal",
            "example": 150.75
          },
          "locationId": {
            "type": "integer",
            "example": 1
          },
          "userId": {
            "type": "integer",
            "example": 3
          }
        }
      }
    }
  }

        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario eliminado"
          }
        }
      }
    },
    "/api/orders": {
      "get": {
        "summary": "Listar órdenes",
        "tags": [
          "Orders"
        ],
        "responses": {
          "200": {
            "description": "Lista de órdenes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
